/*1. Write a function to find the greatest number from the given array of any size. (TSRS)*/

#include<stdio.h>
int maxfunc(int arr[],int n);
int main()
{
int arr[20];
int n;
printf("Enter the size of array :");
scanf("%d",&n);
for(int i=0;i<n;i++){
    printf("Enter the %d value of array :",i+1);
    scanf("%d",&arr[i]);
}
printf("Your greatest value in an array is %d ",maxfunc(&arr[0],n));

return 0;
}
int maxfunc(int arr[],int n){
// first sorting the array
int temp;
for(int i=0;i<n;i++){
    for(int j=i+1;j<n;j++){
        if(arr[i]<arr[j]){
            temp=arr[i];
            arr[i]=arr[j];
            arr[j]=temp;
        }
    }

}
return arr[0];

}
