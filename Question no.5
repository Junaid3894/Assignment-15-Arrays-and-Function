Function has to return the value of the element.*/
#include<stdio.h>
// Function decleartion
int occ(int arr[],int size,int n);
int main()
{
int arr[20];
int size;
int n;
printf("Enter the size of the array :");
scanf("%d",&size);
for(int i=0;i<size;i++){
    // Taking input elements of the array from the user
    printf("Enter the %d value of the array :",i+1);
    scanf("%d",&arr[i]);
}
printf("Enter the number to find how many occurence in an array :");
scanf("%d",&n);
occ(arr,size,n); // function calling
return 0;
}
// function defination
int occ(int arr[],int size,int n){
    int count=0;
    for(int i=0;i<size;i++){
        if(n==arr[i]){
            count++;
        }

    }
    printf("%d element occoures %d times",n,count);
}
