/*7. Write a function in C to count a total number of duplicate elements in an array.
*/

#include<stdio.h>
int count_arr(int *arr,int size);
int main()
{
int arr[20];
int size;
printf("Enter the size of the array :");
scanf("%d",&size);
for(int i=0;i<size;i++){
    printf("Enter the %d value of the array :",i+1);
    scanf("%d",&arr[i]);
}
count_arr(arr,size);

return 0;
}
int count_arr(int *arr,int size){
        int count=0;
    for(int i=0;i<size;i++){
        for(int j=i+1;j<size;j++){
            if(arr[i]==arr[j]){
                count++;
                break;
            }

        }
    }
printf("Your total number of duplicate value in an array is %d",count);
}
